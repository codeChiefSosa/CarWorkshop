
@model List<Car>
@{
    <div class="d-flex flex-column font-weight-bold">
        <div>Amount of cars already repaired: </div>
    <div id="progressbar" class="mb-4" data-value="@ViewData["AmountOfRepairedCars"]"></div>
    </div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Brand</th>
                <th scope="col">Licence Plates</th>
                <th scope="col">Repair status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Car car in Model)
            {
                <tr>
                    <td>@car.Brand</td>
                    <td>@car.Plates</td>
                    @if(car.Repaired == true)
                    {
                        <td>
                            <form asp-controller="Car" asp-action="Delete" method="POST">
                                <input type="hidden" name="Id" value="@car.Id"/>
                                <button type="submit" class="btn btn-success">
                                    Claim!
                                </button>
                            </form>
                        </td>
                    }
                    else
                    {
                        <td class="text-danger">In progress</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts{
    <script>
        $.noConflict();
    $(function () {
        var bar = document.getElementById("progressbar");
        var valueString = bar.getAttribute("data-value");
        var valueNumber = parseFloat(valueString);
        $("#progressbar").progressbar({
            value: valueNumber
        });
    });
    </script>
 }
